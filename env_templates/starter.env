APP_NAME=Laravel
APP_ENV=local
APP_KEY= # Leave blank, will be generated by php artisan key:generate
APP_DEBUG=true
APP_URL=http://localhost:8888 # Reflects how you access it from the host browser via Nginx

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_TIMEZONE=UTC

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# --- DATABASE CONFIGURATION ---
DB_CONNECTION=mongodb
DB_HOST=mongodb       # This is the service name of your MongoDB container
DB_PORT=27017         # The internal port MongoDB listens on
DB_DATABASE=ceg_hub_database # As defined in docker-compose.yaml
DB_USERNAME=root      # As defined in docker-compose.yaml
DB_PASSWORD=password  # As defined in docker-compose.yaml
# --- END DATABASE CONFIGURATION ---

# --- SESSION, QUEUE, CACHE ---
# Using file and sync for these is fine initially. 
# Consider Redis/Memcached later for performance if needed.
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log # Default, change if using Pusher, Redis broadcast, etc.
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync # Using sync for queues initially
CACHE_STORE=file   # Using file for cache initially
# --- END SESSION, QUEUE, CACHE ---


MAIL_MAILER=log # Use 'log' for local development unless you set up Mailpit/Mailhog/SMTP
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"


VITE_APP_NAME="${APP_NAME}"
# VITE_PUSH_SERVER_APP_KEY="${PUSHER_APP_KEY}"        # Uncomment if using Vite + Pusher
# VITE_PUSH_SERVER_HOST="${PUSHER_HOST}"              # Uncomment if using Vite + Pusher
# VITE_PUSH_SERVER_PORT="${PUSHER_PORT}"              # Uncomment if using Vite + Pusher
# VITE_PUSH_SERVER_SCHEME="${PUSHER_SCHEME}"          # Uncomment if using Vite + Pusher
# VITE_PUSH_SERVER_CLUSTER="${PUSHER_APP_CLUSTER}"    # Uncomment if using Vite + Pusher